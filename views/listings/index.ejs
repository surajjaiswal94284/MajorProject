<% layout("/layouts/boiler") %>
<body>
  <style>
    #filters{
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }
    .filter{
      text-align: center;
      margin-right: 2rem;
      margin-top: 2rem;
      margin-bottom: 1rem;
      opacity: 0.6;
    }
    .filter:hover{
      opacity: 1;
      cursor: pointer;
    }

    .gst{
      display: none;
    }
    .tax-toggle{
      border:1px solid black;
      border-radius: 1rem;
      height: 3.5rem;
      padding: 1rem;
      margin-left: 3.5rem;
    }
    .filter a{
      text-decoration: none;
      color: inherit;
    }
  </style>

    <div id="filters"  class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="filter">
        <div><a href="/trending"><i class="fa-solid fa-fire"></i></a></div>
        <p>Trending</p>
      </div>

      <div class="filter">
        <div><a href="/rooms"><i class="fa-solid fa-bed"></i></a></div>
        <p>Rooms</p>
      </div>

      <div class="filter">
        <div><a href="/iconic"><i class="fa-solid fa-mountain-city"></i></a></div>
        <p>Iconic cities</p>
      </div>

      
      <div class="filter">
        <div><a href="/mountains"><i class="fa-solid fa-mountain"></i></a></div>
        <p>Mountains</p>
      </div>
      
      <div class="filter">
        <div><a href="/castles"><i class="fa-solid fa-fort-awesome"></i></a></div>
        <p>Castles</p>
      </div>
    
      <div class="filter">
        <div><a href="/pools"><i class="fa-solid fa-person-swimming"></i></a></div>
        <p>Amazing Pools</p>
      </div>
    
      <div class="filter">
        <div><a href="/camp"><i class="fa-solid fa-campground"></i></a></div>
        <p>Camping</p>
      </div>
    
      <div class="filter">
        <div><a href="/farms"><i class="fa-solid fa-cow"></i></a></div>
        <p>Farms</p>
      </div>
    
      <div class="filter">
        <div><a href="/arctic"><i class="fa-solid fa-snowflake"></i></a></div>
        <p>Arctic</p>
      </div>

      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Taxes</label>
        </div>
      </div>

    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(let list of Lists){%>
            <a href="/listings/<%=list.id%>" class="listing-link">
                 <div class="card col listing-card">
                <img src="<%=list.image.url%>" class="card-img-top" alt="listingImage" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%=list.title%><br></b>
                      &#8377;<%= list.price.toLocaleString("en-IN") %>/night
                      <i class="gst">&nbsp; +18% GST</i>
                  </p>
                </div>
              </div>
            </a>
        <%}%>
    </div>
    
<script>
  let priceTotal=document.getElementById("flexSwitchCheckDefault");
  priceTotal.addEventListener("click",()=>{
  let gst=document.getElementsByClassName("gst");
  
  for(let info of gst){
    if(info.style.display!="inline"){
      info.style.display="inline"
    }else{
      info.style.display="none";
    }
  }
  })
</script>
  </body>