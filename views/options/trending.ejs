<% layout("/layouts/boiler") %>
<body>
    
<div class="options">
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let list of Lists) { %>
        <% if (list.category == "Trending") { %>
            <a href="/listings/<%= list.id %>" class="listing-link">
            <div class="card col listing-card">
              <img src="<%= list.image.url %>" class="card-img-top" alt="listingImage" style="height: 20rem;">
              <div class="card-img-overlay"></div>
              <div class="card-body">
                <p class="card-text">
                  <b><%= list.title %><br></b>
                  &#8377;<%= list.price.toLocaleString("en-IN") %>/night
                </p>
              </div>
            </div>
          </a>
        <% } %>
      <% } %>
</div>
</div>

</body>